# Environment variables for Meeting Minutes Backend
# Copy this file to .env and fill in your values

# ============================================
# GROQ API CONFIGURATION (REQUIRED)
# ============================================
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# ============================================
# OPTIONAL CONFIGURATIONS
# ============================================

# Database (default: SQLite in /app/data)
# DATABASE_URL=sqlite:///data/meeting_minutes.db

# API Server
# API_HOST=0.0.0.0
# API_PORT=8000

# CORS (allowed origins for frontend)
# CORS_ORIGINS=["http://localhost:3118","http://localhost:1420","tauri://localhost"]

# Logging
# LOG_LEVEL=INFO

# ============================================
# GROQ MODEL CONFIGURATION
# ============================================
# Default models (can be changed in UI)
# GROQ_TRANSCRIPTION_MODEL=whisper-large-v3
# GROQ_SUMMARY_MODEL=llama-3.3-70b-versatile
